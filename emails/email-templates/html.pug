div(marginwidth="0" marginheight="0" style="padding:0")
    div(style="background-color:#f7f7f7;margin:0;padding:70px 0 0 0;width:100%;")
        table(border="0" cellpadding="0" cellspacing="0" height="100%" width="100%")
            tr
                td(align="center" valign="top")
                    table(border="0" cellpadding="0" cellspacing="0" width="600" style="background-color:#ffffff;border:1px solid #dedede;border-radius:3px")
                        tr
                            td(align="center" valign="top")
                                table(border="0" cellpadding="0" cellspacing="0" width="100%" style='background-color:#96588a;color:#ffffff;border-bottom:0;font-weight:bold;line-height:100%;vertical-align:middle;font-family:"Helvetica Neue",Helvetica,Roboto,Arial,sans-serif;border-radius:3px 3px 0 0')
                                    tr
                                        td(style="padding:36px 48px;display:block")
                                            h1(style='font-family:"Helvetica Neue",Helvetica,Roboto,Arial,sans-serif;font-size:30px;font-weight:300;line-height:150%;margin:0;text-align:left;color:#ffffff;background-color:inherit') #{header}
                        tr
                            td(align="center" valign="top")
                                table(border="0" cellpadding="0" cellspacing="0" width="600")
                                    tr
                                        td(valign="top" style="background-color:#ffffff")
                                            table(border="0" cellpadding="20" cellspacing="0" width="100%")
                                                tr
                                                    td(valign="top" style="padding:48px 48px 32px")
                                                        div(style='color:#636363;font-family:"Helvetica Neue",Helvetica,Roboto,Arial,sans-serif;font-size:14px;line-height:150%;text-align:left')
                                                            p(style="margin:0 0 16px") Hi #{order.customer.displayName}
                                                            p(style="margin:0 0 16px")!= content
                                                            - var options = { year: 'numeric', month: 'long', day: 'numeric' }
                                                            p(style='color:#96588a;display:block;font-family:"Helvetica Neue",Helvetica,Roboto,Arial,sans-serif;font-size:18px;font-weight:bold;line-height:130%;margin:0 0 18px;text-align:left') [Order ##{orderId}] (#{new Date(order.generalInfo.createdOn).toLocaleDateString("en-US", options)})
                                                            div(style="margin-bottom:40px")
                                                                table(cellspacing="0" cellpadding="6" border="1" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;width:100%;font-family:'Helvetica Neue',Helvetica,Roboto,Arial,sans-serif")
                                                                    thead
                                                                        tr
                                                                            th(scope="col" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") Product
                                                                            th(scope="col" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") Quantity
                                                                            th(scope="col" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") Price
                                                                    tbody
                                                                        each i in Object.keys(order.cart.products)
                                                                            tr
                                                                                td(style="color:#636363;border:1px solid #e5e5e5;padding:12px;text-align:left;vertical-align:middle;font-family:'Helvetica Neue',Helvetica,Roboto,Arial,sans-serif;word-wrap:break-word") #{order.cart.products[i].name}
                                                                                td(style="color:#636363;border:1px solid #e5e5e5;padding:12px;text-align:left;vertical-align:middle;font-family:'Helvetica Neue',Helvetica,Roboto,Arial,sans-serif")  #{order.cart.products[i].quantity}
                                                                                td(style="color:#636363;border:1px solid #e5e5e5;padding:12px;text-align:left;vertical-align:middle;font-family:'Helvetica Neue',Helvetica,Roboto,Arial,sans-serif") ₹ #{order.cart.products[i].price}
                                                                    tfoot
                                                                        tr
                                                                            th(scope="row" colspan="2" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left;border-top-width:4px") Subtotal:
                                                                            td(style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left;border-top-width:4px") ₹#{order.cart.subTotal}
                                                                        tr
                                                                            th(scope="row" colspan="2" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") Shipping:
                                                                            td(style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") ₹#{order.shipping.charge} via #{order.shipping.methodName}
                                                                        tr
                                                                            th(scope="row" colspan="2" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") Payment method:
                                                                            td(style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") #{order.payment.method}
                                                                        tr
                                                                            th(scope="row" colspan="2" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") Total:
                                                                            td(style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") ₹#{order.cart.total}
                                                                        if(order.cart.note)
                                                                            tr
                                                                                th(scope="row" colspan="2" style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") Note:
                                                                                td(style="color:#636363;border:1px solid #e5e5e5;vertical-align:middle;padding:12px;text-align:left") #{order.cart.note}
                                                            table(cellspacing="0" cellpadding="0" border="0" style="width:100%;vertical-align:top;margin-bottom:40px;padding:0")
                                                                tr
                                                                    td(valign="top" width="50%" style="text-align:left;font-family:'Helvetica Neue',Helvetica,Roboto,Arial,sans-serif;border:0;padding:0")
                                                                        h2(style="color:#96588a;display:block;font-family:'Helvetica Neue',Helvetica,Roboto,Arial,sans-serif;font-size:18px;font-weight:bold;line-height:130%;margin:0 0 18px;text-align:left") Shipping address
                                                                        address(style="padding:12px;color:#636363;border:1px solid #e5e5e5;line-height:1.5;").
                                                                            #{order.customer.displayName}
                                                                            <br>
                                                                            #{order.customer.shipToAddress.address1}
                                                                            <br>
                                                                            #{order.customer.shipToAddress.address2}
                                                                            <br>
                                                                            #{order.customer.shipToAddress.city + ' ' + order.customer.shipToAddress.postalCode }
                                                                            <br>
                                                                            #{order.customer.shipToAddress.state + ', ' + order.customer.shipToAddress.country}
                                                                            <br>
                                                                            <a href="tel:#{order.customer.phoneNumber}" style="color:#96588a;font-weight:normal;text-decoration:underline" target="_blank">#{order.customer.phoneNumber}</a>
                                                                            <br>
                                                                            <a href="mailto:#{order.customer.email}" target="_blank">#{order.customer.email}</a>
                                                            if(additionalContent)
                                                                p(style="margin:0 0 16px") #{additionalContent}
            tr
                td(align="center" valign="top")
                    table(border="0" cellpadding="10" cellspacing="0" width="600")
                        tr
                            td(valign="top" style="padding:0;border-radius:6px")
                                table(border="0" cellpadding="10" cellspacing="0" width="100%")
                                    tr
                                        td(colspan="2" valign="middle" style="border-radius:6px;border:0;color:#8a8a8a;font-family:'Helvetica Neue',Helvetica,Roboto,Arial,sans-serif;font-size:12px;line-height:150%;text-align:center;padding:24px 0")
                                            p(style="margin:0 0 16px") Holi Colours Jewellery
                                                                                                           
